  <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/js/select2.min.js"></script>
  <script type="text/javascript">

    $(document).ready(function() {
      $('.js-example-basic-single').select2();
      $('#getProduks').change(function(e){
        let data = $('#getProduks').val();
        let datas = data.split('|');
        let idProduk = datas[0];
        let hargaProduk = datas[1];
        let stokProduk = datas[2];
        let namaProduk = datas[3];

        $('#hargaProduk').val('');
        $('#hargaProduk').val(hargaProduk);
      })

      // HAPUS DATA
       // tambahin class containernya ini liat di html di <div> Page Content
      let container = document.querySelector('.containernya')
      container.addEventListener('click', function(e) {
        // deleteBtn class tombol hapus 
        if (e.target.className == 'deleteBtn' || e.target.className.split(' ')[0] == 'deleteBtn') {
          let cekIndex = e.target.className.split(' ')[0] == 'deleteBtn' ? e.target.parentElement.parentElement.parentElement: e.target.parentElement.parentElement
          let getIndex = $( "tbody tr" ).index( cekIndex ) - 1 
          let getData= JSON.parse(localStorage.getItem('dataProduk'))

          getData.splice(getIndex, 1)

          localStorage.removeItem('dataProduk')
          localStorage.setItem('dataProduk', JSON.stringify(getData))
          
          cekIndex.remove()
          
        }
      })
      // END HAPUS DATA

      let dataStore = localStorage.getItem('dataProduk') ? JSON.parse(localStorage.getItem('dataProduk')) : [];
      let subAllTotal = 0;

        for (var i = 0; i < dataStore.length; i++){
          
          let table = `
          <tr>
            <td width="10" align="center" scope="row"></td>
            <td>&nbsp;<button class="deleteBtn" onClick="window.location.reload();"><i class="deleteBtn fa fa-trash-o"></i></button></td>
            <td>&nbsp;${dataStore[i].namaProduk}</td>
            <td>&nbsp;${dataStore[i].hargaProduk}</td>
            <td>&nbsp;${dataStore[i].disProduk}</td>
            <td>&nbsp;${dataStore[i].jumProduk}</td>
            <td>&nbsp;${(dataStore[i].hargaProduk * dataStore[i].jumProduk) - (dataStore[i].hargaProduk * dataStore[i].jumProduk * dataStore[i].disProduk/100)}</td>
          </tr>
          `
          $('tbody').append(table);
          
          subAllTotal += (dataStore[i].hargaProduk * dataStore[i].jumProduk) - (dataStore[i].hargaProduk * dataStore[i].jumProduk * dataStore[i].disProduk/100)
        }
        $('#subAllTotal').text(jadiinRupiah(subAllTotal));
     

      function jadiinRupiah(total) {
        return new Intl.NumberFormat('en-US',{style: 'currency', currency: 'IDR'}).format(total).split('IDR')[1].trim()
      }

      $('#tambahProduk').click(function(){

        let namaP = $('#getProduks').val().split('|')[3];
        let hargaP = $('#hargaProduk').val();
        let disP = $('#getDis').val();
        let jumP = $('#getJum').val();
        let notaP = $('#getNota').val();
        
        let data = {
          namaProduk: namaP,
          hargaProduk: hargaP,
          disProduk: disP,
          jumProduk: jumP,
          noNota: notaP
        }
        
        dataStore.push(data)
        localStorage.setItem('dataProduk',JSON.stringify(dataStore))
  
        let table = `
        <tr>
          <td width="10" align="center" scope="row"></td>
          <td>&nbsp;<button class="deleteBtn" onClick="window.location.reload();"><i class="deleteBtn fa fa-trash-o"></i></i></button></td>
          <td>&nbsp;${data.namaProduk}</td>
          <td>&nbsp;${data.hargaProduk}</td>
          <td>&nbsp;${data.disProduk}</td>
          <td>&nbsp;${data.jumProduk}</td>
          <td>&nbsp;${(data.hargaProduk * data.jumProduk) - (data.hargaProduk * data.jumProduk * data.disProduk/100)}</td>
        </tr>
        `
        console.log(table)
        $('tbody').append(table);

        subAllTotal += (data.hargaProduk * data.jumProduk) - (data.hargaProduk * data.jumProduk * data.disProduk/100)

        $('#subAllTotal').html(jadiinRupiah(subAllTotal));
  
      })

      $('#tambahTransaksi').click(function(){
        let dataStore2 = localStorage.getItem('dataTransaksi') ? JSON.parse(localStorage.getItem('dataTransaksi')) : [];
        let tanggalT = $('#getTanggal').val();
        let nonotaT = $('#getNonota').val();
        let pelangganT = $('#getPelanggan').val();
        
        let data1 = {
          tanggalTransaksi: tanggalT,
          nonotaTransaksi: nonotaT,
          pelangganTransaksi: pelangganT
        }
        
        dataStore2.push(data1)
        localStorage.setItem('dataTransaksi',JSON.stringify(dataStore2))

        alert("Data transaksi tersimpan !");
    
      })
    });

    $('#simpanTransaksi').click(function(e){
      e.preventDefault();
      var dataProduk = localStorage.getItem("dataProduk");
      var dataTransaksi = localStorage.getItem("dataTransaksi");

      //var dataProdukk = window.localStorage.getItem("dataProduk");

      $.ajax({
        url: '/petugas/simpannota',
        data: {dataProduk: dataProduk, dataTransaksi: dataTransaksi},
        type: 'POST'
      }).done(function(resp){
        alert('Simpan Nota Berhasil !');
        localStorage.clear();
        window.location = '/petugas/nota';
      });
    });

    $('#hapusProduk').click(function(){
      localStorage.clear();
    });
    
</script>

